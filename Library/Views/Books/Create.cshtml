@using Library.Models;
@model Book

@{
    Layout = "_Layout";

    string header = "Add new book";
    ViewBag.Title = header;
}

<h1>@header</h1>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
@using (Html.BeginRouteForm("CreateBook", FormMethod.Post))
{
    <div class="form-row">
        <div class="col-sm-6 form-group">
            <label asp-for="Title">Title</label>
            <input type="text" asp-for="Title" class="form-control">
            <span asp-validation-for="Title" />
        </div>
        <div class="col-sm-6 form-group">
            <label asp-for="Author">Author</label>
            <input type="text" asp-for="Author" class="form-control">
            <span asp-validation-for="Author" />
        </div>
    </div>

    <div class="form-row">
        <div class="col-sm-6 form-group">
            <label asp-for="Scud">Scud</label>
            <input type="text" asp-for="Scud" class="form-control">
            <span asp-validation-for="Scud" />
        </div>
        <div class="col-sm-6 form-group">
            <label asp-for="YearOfPublishing">Year of publishing</label>
            <input type="number" asp-for="YearOfPublishing" class="form-control">
            <span asp-validation-for="YearOfPublishing" />
        </div>
    </div>

    <button type="submit" class="btn btn-success">Add book</button>
}

@section Scripts{ 
<script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.2/dist/jquery.validate.min.js" type="text/javascript"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
}